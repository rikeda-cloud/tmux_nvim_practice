{
	"languageserver": {
		"clangd": {
			"command": "clangd",
			"filetypes": [
				"c",
				"cpp"
			],
			"rootPatterns": [
				".ccls-root",
				"compile_commands.json"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls-cache"
				}
			}
		},
		"python": {
			"command": "pyright-langserver",
			"filetypes": [
				"python"
			]
		}
	},
	"suggest.completionItemKindLabels": {
		"function": "function",
		"method": "method",
		"variable": "var",
		"constant": "const",
		"struct": "struct",
		"class": "class",
		"interface": "interface",
		"text": "text",
		"enum": "enum",
		"enumMember": "enumMember",
		"color": "color",
		"property": "property",
		"field": "field",
		"unit": "unit",
		"file": "file",
		"value": "value",
		"event": "event",
		"folder": "folder",
		"keyword": "keyword",
		"snippet": "snippet",
		"operator": "operator",
		"reference": "reference",
		"typeParameter": "type",
		"default": "default"
	},
	//	"coc.preferences.formatOnSave": true,
	"coc.preferences.silentAutoupdate": true,
	"python.formatting.provider": "autopep8",
	"python.linting.enabled": true,
	"python.linting.pylintEnabled": false,
	"python.linting.flake8Enabled": true
}
