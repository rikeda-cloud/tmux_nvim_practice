{
	"languageserver": {
		"clangd": {
			"command": "clangd",
			"filetypes": [
				"c",
				"cpp"
			],
			"rootPatterns": [
				".ccls-root",
				"compile_commands.json"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls-cache"
				}
			}
		},
		"pyright": {
			"enabled": false
		},
		"tsserver": {
			"enabled": false
		},
		"rust": {
			"command": "rust-analyzer",
			"filetypes": [
				"rust"
			],
			"rootPatterns": [
				"Cargo.toml"
			]
		}
		"html": {
			"command": "html-languageserver",
			"args": [
				"--stdio"
			],
			"filetypes": [
				"html"
			]
		},
		"css": {
			"command": "css-languageserver",
			"args": [
				"--stdio"
			],
			"filetypes": [
				"css"
			]
		}
	},
	"suggest.completionItemKindLabels": {
		"function": "function",
		"method": "method",
		"variable": "var",
		"constant": "const",
		"struct": "struct",
		"class": "class",
		"interface": "interface",
		"text": "text",
		"enum": "enum",
		"enumMember": "enumMember",
		"color": "color",
		"property": "property",
		"field": "field",
		"unit": "unit",
		"file": "file",
		"value": "value",
		"event": "event",
		"folder": "folder",
		"keyword": "keyword",
		"snippet": "snippet",
		"operator": "operator",
		"reference": "reference",
		"typeParameter": "type",
		"default": "default"
	},
	"coc.preferences.formatOnSave": true, // formatter setting
	"coc.preferences.silentAutoupdate": true,
	"python.formatting.provider": "autopep8",
	"python.linting.enabled": true,
	"python.linting.pylintEnabled": false,
	"python.linting.flake8Enabled": true,
	"ruff.enable": false,
	"inlayHint.enable": false,
	"rust-analyzer.linkedProjects": [
		"./Cargo.toml"
	]
}
